{
  "name": "orchestration",
  "version": "1.0.0",
  "description": "PM orchestration, session management, Linear workflow integration",
  "repository": "https://github.com/levifig/agent-skills",
  "license": "MIT",
  "agents": [
    "./agents/pm.md"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/orchestration-validate-commit.py",
            "timeout": 30000,
            "description": "Validate commit messages follow conventions"
          },
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/orchestration-detect-linear-magic.py",
            "timeout": 30000,
            "description": "Detect Linear magic words for auto-status updates"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/session-start.sh",
            "description": "Agent-aware session context and active sessions overview"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/session-end.sh",
            "description": "Agent-specific completion checklist and session hygiene reminder"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/pre-compact-archive.sh",
            "description": "Warn about recently modified sessions before context compaction",
            "timeout": 60000
          }
        ]
      }
    ]
  },
  "commands": [
    "./commands/start-session.md",
    "./commands/resume-session.md",
    "./commands/review-sessions.md",
    "./commands/council-session.md"
  ],
  "skills": [
    "./skills/orchestration/SKILL.md"
  ]
}